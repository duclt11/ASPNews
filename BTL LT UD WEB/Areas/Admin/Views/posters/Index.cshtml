
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>
@model PagedList.IPagedList<BTL_LT_UD_WEB.Models.poster>
@using PagedList.Mvc;

<section class="content">
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body table-responsive">
            <div class="row">
                <div class="col-lg-1 col-md-1 col-1">
                    <span class="btn btn-success col-12" style="height:38px;color:white;">@Html.ActionLink("Thêm", "Create")</span>
                </div>
                <div class="col-lg-11 col-md-11 col-11">
                    <form action="" id="form-search">
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" class="form-control" name="searchstr" id="searchstr" placeholder="Tìm kiếm tác giả...">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default" value="Search">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <table class="table table-light" border="1px">
                <thead class="thead-light">
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Tên hiển thị
                        </th>
                        <th>
                            Họ tên
                        </th>
                        <th>
                            Avatar
                        </th>
                        <th>
                            Phone
                        </th>
                        
                        <th>
                            Ngày tham gia
                        </th>
                        <th> Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.poster_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fullname)
                            </td>
                            <td>
                                @{
                                    string ImagePath = "~/images/poster/" + item.avatar;
                                }
                                <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
                                <br />
                                @Html.DisplayFor(modelItem => item.avatar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phone)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.created_at)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit",new { id = item.poster_id } )"><i class="fas fa-pen"></i> </a><br />
                                <a href="@Url.Action("Details",new { id = item.poster_id } )"><i class="fas fa-eye"></i> </a><br />
                                <a href="@Url.Action("Delete",new { id = item.poster_id } )"><i class="fas fa-trash-alt"></i> </a><br />
                                <a href="@Url.Action("Posted",new { id = item.poster_id } )"><i class="fas fa-edit"></i> </a><br />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style="text-align:center">Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount</div>
            <div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
            <hr>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

