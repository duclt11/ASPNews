@model IEnumerable<BTL_LT_UD_WEB.Models.post>

@{
    ViewBag.Title = "Posted";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div style="padding:10px">
    <h2>Bài viết đã đăng của @ViewBag.Name</h2>


    <table class="table">
        <tr>
            <th>
                Danh mục
            </th>

            <th>
                Tiêu đề
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Nội dung
            </th>

            <th>
                Ngày đăng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.category.category_name)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.Raw(item.content)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.created_at)
                </td>
                <td>
                    @*@Html.Action("< i class=\"fas fa-pen\"></i>", "Edit", "posts", new { id = item.poster_id })
                        @Html.Action("< i class=\"fas fa-eye\"></i>", "Details", "posts", new { id = item.poster_id })
                        @Html.ActionLink("< i class=\"fas fa-trash-alt\"></i>", "Delete", "posts", new { id = item.poster_id })
                        @Html.ActionLink("< i class=\"fas fa-comment\"></i>", "Comment", "posts", new { id = item.poster_id })*@
                    <a href="/Admin/posts/Edit/@item.post_id"><i class="fas fa-pen"></i> </a><br />
                    <a href="/Admin/posts/Details/@item.post_id"><i class="fas fa-eye"></i> </a><br />
                    <a href="/Admin/posts/Delete/@item.post_id"><i class="fas fa-trash-alt"></i> </a><br />
                    <a href="/Admin/posts/PostComment/@item.post_id"><i class="fas fa-comment"></i> </a>
                </td>
            </tr>
        }

    </table>

</div>
